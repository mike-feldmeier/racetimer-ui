@font-face
	font-family Roboto
	font-weight normal
	src url(../fonts/Roboto-Regular.ttf) format('truetype')

@font-face
	font-family Roboto
	font-weight bold
	src url(../fonts/Roboto-Medium.ttf) format('truetype')

html
	height 100%

body
	background-color #eee
	box-sizing border-box
	display flex
	font-family Roboto
	height 100%

#content
	flex 1

#debug
	background-color #ddd
	color #555
	display none
	padding 1rem
	width 30rem

	table
		width 100%

		thead
			td
				color #333
				font-size 2rem
				padding 1rem 0 0.5rem 0
				text-align center

		tbody
			.key
				font-weight bold

			.value
				text-align right

	.buttons
		margin-top 2rem
		text-align center

		button
			margin 0 0.25rem

.btn-group
	margin 0 0.25rem